<% if @photo.errors.any? %>
	<ul>
  	<% @photo.errors.full_messages.each do |msg| %>
    	<li><%= msg %></li>
  	<% end %>
	</ul>
<% end %>

<%= form_for @photo do |f| %>

  <%= f.label :category, "Category" %>
  <%= f.collection_select :category_id, Category.all, :id , :name %>

  <%= f.label :title%>
  <%= f.text_field :title%>

  <%= f.label :description%>
  <%= f.text_field :description%>

  <%= f.submit %>

<% end %>